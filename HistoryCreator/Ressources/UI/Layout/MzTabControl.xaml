<UserControl x:Class="HistoryCreator.Ressources.UI.Layout.MzTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HistoryCreator.Ressources.UI.Layout"
             xmlns:converter="clr-namespace:HistoryCreator.Ressources.Core.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="RootGrid">
        <Grid.Resources>
            <ResourceDictionary>
                <converter:DebugDummyConverter x:Key="DebugDummyConverter" />

                <Style TargetType="local:MzPaneView">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate DataType="local:MzPaneView">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding .}"
                                               Background="Transparent"
                                               Foreground="Black"
                                               VerticalAlignment="Center" />
                                    <Button Margin="5 0 0 0"
                                            Content="X"
                                            Background="Transparent"
                                            Visibility="{Binding IsStatic, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TabItem}}, Converter={converter:InvertBoolToVisibilityConverter}}"
                                            Command="{Binding CloseViewCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TabItem}}}"
                                            BorderBrush="Transparent" />
                                </StackPanel>
                            </DataTemplate>
                        </Setter.Value>

                    </Setter>
                </Style>
                
            </ResourceDictionary>
        </Grid.Resources>
        
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TabControl x:Name="RootControl" />
    </Grid>
</UserControl>
